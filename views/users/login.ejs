<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-5">
    <h1>Log In to your account</h1>
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="username"><b>username</b></label>
        <input
          name="username"
          id="username"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password"><b>password</b></label>
        <input
          name="password"
          id="password"
          class="form-control"
          type="password"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
