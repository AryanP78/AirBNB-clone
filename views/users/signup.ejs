<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-5">
    <h1>Sign up for AirBNB</h1>
    <form action="signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username"><b>username</b></label>
        <input
          name="username"
          id="username"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="mb-3">
        <label for="email"><b>email</b></label>
        <input
          name="email"
          id="email"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password"><b>password</b></label>
        <input
          name="password"
          id="password"
          class="form-control"
          type="password"
          required
        />
      </div>
      <button class="btn btn-success">Sign up</button>
    </form>
  </div>
</div>
