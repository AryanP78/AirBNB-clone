<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-inline: 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"
      ><div class="mainicon"><i class="fa-brands fa-airbnb"></i>BNB</div></a
    >
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">Add new Listing</a>
      </div>
      <nav class="navbar navbar-light ms-auto">
        <div class="container-fluid">
          <form action="/listings/search" method="GET" class="d-flex">
            <input
              type="text"
              name="q"
              class="form-control me-2 search-inp"
              placeholder="Search listings..."
              aria-label=""
            />
            <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>Search
            </button>
          </form>
        </div>
      </nav>
      <div class="navbar-nav ms-auto">
        <% if(!currUser){ %>
        <a class="nav-link" aria-current="page" href="/signup"
          ><b>Sign Up</b></a
        >
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if(currUser){ %>

        <a class="nav-link" href="/logout">Logout</a>
        <%}%>
      </div>
    </div>
  </div>
</nav>
